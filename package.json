{
    "name": "svelte-app",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "vite dev --host 0.0.0.0",
        "build": "vite build",
        "preview": "vite preview",
        "prepare": "svelte-kit sync",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "lint:es": "eslint --ext .js,.ts,.svelte --ignore-path .gitignore .",
        "lint:es:fix": "eslint --fix --ext .js,.ts,.svelte --ignore-path .gitignore .",
        "lint:style": "stylelint ./src/**/*.{css,scss,svelte} --ignore-pattern .gitignore",
        "lint:style:fix": "stylelint --fix ./src/**/*.{css,scss,svelte} --ignore-pattern .gitignore"
    },
    "devDependencies": {
        "@sveltejs/adapter-auto": "^2.1.0",
        "@sveltejs/adapter-netlify": "^2.0.7",
        "@sveltejs/adapter-node": "^1.2.4",
        "@sveltejs/kit": "^1.20.4",
        "@typescript-eslint/eslint-plugin": "^5.59.8",
        "@typescript-eslint/parser": "^5.59.8",
        "carbon-components-svelte": "^0.79.0",
        "eslint": "^8.41.0",
        "eslint-config-standard": "^17.1.0",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-n": "^16.0.0",
        "eslint-plugin-promise": "^6.1.1",
        "eslint-plugin-standard": "^5.0.0",
        "eslint-plugin-svelte": "^2.29.0",
        "postcss-html": "^1.5.0",
        "prettier-plugin-svelte": "^3.0.0",
        "stylelint": "^15.6.2",
        "stylelint-config-html": "^1.1.0",
        "stylelint-config-recess-order": "^4.0.0",
        "stylelint-config-standard": "^33.0.0",
        "svelte": "^4.0.0",
        "svelte-check": "^3.0.0",
        "svelte-preprocess": "^5.0.0",
        "tslib": "^2.5.0",
        "typescript": "^5.0.0",
        "vite": "^4.3.9"
    }
}
